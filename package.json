{
  "name": "topobre",
  "private": true,
  "packageManager": "pnpm@10.12.4",
  "scripts": {
    "dev": "turbo run dev --parallel --",
    "build": "turbo run build --",
    "lint": "turbo run lint --",
    "db:seed": "turbo run db:seed --filter=@topobre/typeorm",
    "dev:api": "turbo run dev --filter=@topobre/api --cache=local:r,remote:r",
    "dev:worker": "turbo run dev --filter=@topobre/worker --cache=local:r,remote:r",
    "dev:backend": "turbo run dev --filter=@topobre/api --filter=@topobre/worker --cache=local:r,remote:r",
    "build:web": "echo 'WEB'",
    "build:api": "turbo run build --filter=@topobre/api",
    "build:worker": "turbo run build --filter=@topobre/worker",
    "start:web": "echo 'WEB RODOU'",
    "start:api": "pnpm --filter @topobre/api start",
    "start:worker": "pnpm --filter @topobre/worker start"
  },
  "devDependencies": {
    "@types/node": "^24.0.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "ioredis": "^5.6.1",
    "module-alias": "^2.2.3",
    "reflect-metadata": "^0.2.2"
  }
}