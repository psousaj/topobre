{
    "extends": "@topobre/tsconfig/typeorm.json",
    "compilerOptions": {
        "paths": {
            "@topobre/typeorm/types": [
                "./types"
            ],
            "@topobre/typeorm": [
                "./entities"
            ],
            "@t3-oss/env-nextjs": [
                "../env/node_modules/@t3-oss/env-nextjs"
            ]
        },
        "composite": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "outDir": "./dist"
    },
    "include": [
        "index.ts",
        "entities/index.ts",
        "seed/index.ts",
        "entities/**/*.ts",
        "seed/**/*.ts",
        "types/**/*.ts"
    ],
    "exclude": [
        "dist",
        "build",
        "node_modules"
    ]
}