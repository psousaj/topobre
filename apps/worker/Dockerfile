FROM node:18-slim AS builder

WORKDIR /app

# Instalar pnpm
RUN npm install -g pnpm

# Copiar configs de workspace
COPY package.json pnpm-lock.yaml pnpm-workspace.yaml turbo.json ./

# Copiar pacotes e app do worker
COPY packages ./packages
COPY config ./config
COPY apps/worker ./apps/worker

# Instalar dependÃªncias com workspaces
RUN pnpm install

# Gerar build do worker
RUN pnpm build:worker


# ========= âœ… Production Stage =========
FROM node:18-slim AS runner

WORKDIR /app

# Instalar pnpm
RUN npm install -g pnpm

# Copiar apenas o necessÃ¡rio
COPY package.json pnpm-lock.yaml pnpm-workspace.yaml ./
COPY --from=builder /app/node_modules ./node_modules
COPY --from=builder /app/apps/worker/dist ./apps/worker/dist

# Instalar sÃ³ as dependÃªncias de produÃ§Ã£o
RUN pnpm install --prod

# Definir comando de entrada
CMD ["pnpm", "start:worker"]
