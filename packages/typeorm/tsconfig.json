{
    "extends": "@topobre/tsconfig/typeorm.json",
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./dist",
        "rootDir": "./src",
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strict": false,
        "skipLibCheck": false
    },
    "references": [
        {
            "path": "../env"
        },
        {
            "path": "../winston"
        }
    ],
    "include": [
        "./src/**/*.ts",
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}