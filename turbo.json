{
    "$schema": "https://turborepo.org/schema.json",
    "globalDependencies": [
        ".env"
    ],
    "globalEnv": [
        "NODE_ENV",
        "NEXT_PUBLIC_VERCEL_URL"
    ],
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**",
                "dist/bundle/**",
                "package.json"
            ]
        },
        "build:tsc": {
            "dependsOn": [
                "^build:tsc"
            ],
            "outputs": [
                "dist/**",
                "package.json"
            ]
        },
        "build:tsup": {
            "dependsOn": [
                "build:tsc",
                "^build:tsup"
            ],
            "outputs": [
                "dist/bundle/**"
            ]
        },
        "lint": {
            "cache": false
        },
        "test": {
            "cache": false,
            "dependsOn": [
                "^lint"
            ]
        },
        "db:seed": {
            "cache": false
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "start": {
            "cache": false
        }
    }
}