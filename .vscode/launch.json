{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug API (TypeScript, Nodemon)",
            "runtimeExecutable": "pnpm",
            "runtimeArgs": [
                "dev:api"
            ],
            "cwd": "${workspaceFolder}",
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
        // Para habilitar o debug do frontend (Next.js), descomente abaixo:
        /*
    ,
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Web (Next.js)",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["dev"],
      "cwd": "${workspaceFolder}/apps/web",
      "envFile": "${workspaceFolder}/apps/web/.env",
      "console": "integratedTerminal"
    }
    */
    ]
}