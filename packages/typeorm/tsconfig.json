{
    "extends": "@topobre/tsconfig/lib.json",
    "compilerOptions": {
        "lib": [
            "es2021",
            "dom"
        ],
        "target": "es2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "baseUrl": "./",
        "outDir": "./dist",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "declaration": false,
        "removeComments": false,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "strictPropertyInitialization": false,
        "paths": {
            "@topobre/typeorm/types": [
                "./types"
            ]
        }
    },
    "include": [
        "."
    ],
    "exclude": [
        "dist",
        "build",
        "node_modules"
    ]
}