{
    "extends": "@topobre/tsconfig/base.json",
    "compilerOptions": {
        "lib": [
            "ES2021"
        ],
        "target": "ES2020",
        "baseUrl": ".",
        "outDir": "./dist",
        "rootDir": "./",
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "composite": true,
        "paths": {
            "@topobre/*": [
                "../../packages/*/dist",
                "../../packages/*/src",
                "../../apps/*/dist",
                "../../apps/*/src"
            ]
        }
    },
    "include": [
        "src/**/*",
        "types/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}