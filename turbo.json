{
    "$schema": "https://turborepo.org/schema.json",
    "globalDependencies": [
        ".env"
    ],
    "globalEnv": [
        "NODE_ENV",
        "NEXT_PUBLIC_VERCEL_URL"
    ],
    "pipeline": {
        "build": {
            "outputs": [
                "dist/**"
            ],
            "dependsOn": []
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "start": {
            "cache": false
        }
    }
}