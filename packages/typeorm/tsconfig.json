{
    "extends": "@topobre/tsconfig/typeorm.json",
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./",
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strict": false,
        "paths": {
            "@topobre/typeorm/types": [
                "./types"
            ],
            "@topobre/typeorm": [
                "./entities"
            ],
        }
    },
    "references": [
        {
            "path": "../env"
        },
    ],
    "include": [
        "index.ts",
        "entities/**/*.ts",
        "seed/**/*.ts",
        "types/**/*.ts"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}