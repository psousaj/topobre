{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Library",
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "lib": [
            "ES2021"
        ],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "types": [
            "node"
        ],
        "paths": {
            "@topobre/*": [
                "../../packages/*/dist",
                "../../packages/*/src",
                "../../apps/*/dist",
                "../../apps/*/src"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}