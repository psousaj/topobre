{
  "name": "topobre",
  "private": true,
  "packageManager": "pnpm@10.11.1",
  "scripts": {
    "dev": "turbo run dev --parallel --",
    "build": "turbo run build --",
    "lint": "turbo run lint --",
    "db:seed": "turbo run db:seed --filter=@topobre/typeorm",
    "dev:api": "turbo run dev --filter=@topobre/api",
    "dev:finloader": "turbo run dev --filter=@topobre/finloader",
    "build:api": "turbo run build --filter=@topobre/api",
    "start:api": "turbo run start --filter=@topobre/api"
  },
  "devDependencies": {
    "@types/node": "^24.0.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "reflect-metadata": "^0.2.2"
  }
}