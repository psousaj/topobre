{
  "name": "topobre",
  "private": true,
  "scripts": {
    "dev": "turbo run dev --parallel --",
    "build": "turbo run build --",
    "lint": "turbo run lint --",
    "db:seed": "turbo run db:seed",
    "dev:api": "turbo run dev --filter=@topobre/api",
    "build:api": "turbo run build --filter=@topobre/api",
    "start:api": "turbo run start --filter=@topobre/api"
  },
  "dependencies": {
    "turbo": "^1.13.4"
  },
  "devDependencies": {
    "typescript": "^5.8.3"
  }
}