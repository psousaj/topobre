{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "lib": [
            "ES2021"
        ],
        "moduleResolution": "node",
        "baseUrl": ".",
        "outDir": "dist",
        "rootDir": ".",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "types": [
            "node"
        ],
        "paths": {
            "@topobre/*": [
                "../../packages/*/dist",
                "../../packages/*/src",
                "../../apps/*/dist",
                "../../apps/*/src"
            ]
        }
    },
    "include": [
        "src/**/*",
        "src/types/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}